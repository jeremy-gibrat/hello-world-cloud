# Exemple de fichier terraform.tfvars
# Copiez ce fichier vers terraform.tfvars et remplissez vos valeurs

# Configuration de base
resource_group_name = "rg-hello-world"
location            = "francecentral"  # ou "westeurope", "northeurope"
cluster_name        = "aks-hello-world"

# Configuration des nodes (ajustez selon votre budget)
node_count   = 1              # 1 node pour les tests
node_vm_size = "Standard_B2s_v2" # B2s_v2 (~30€/mois), alternatives: D2s_v3, D2as_v4

# Version Kubernetes (1.30, 1.31, ou 1.32 recommandées pour tier Free)
kubernetes_version = "1.30"

# GitHub Container Registry credentials
# Créez un Personal Access Token (PAT) sur GitHub avec le scope 'read:packages'
ghcr_username = "votre-username-github"
ghcr_token    = "ghp_votre_token_github"
